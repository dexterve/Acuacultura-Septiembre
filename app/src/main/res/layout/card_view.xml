<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pictureCard"
    android:layout_height="@dimen/heigth_cardView"
    android:layout_width="match_parent"
    cardview:cardCornerRadius="@dimen/cornerRadiosCardview"
    android:layout_marginBottom="12dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgpictureCard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/heigth_cardView"
            android:background="@drawable/image"
            android:scaleType="centerCrop"
            android:transitionName="@string/transitionName" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/backgraudtext_card2"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="@dimen/activityVerticalMargin">

            <TextView
                android:id="@+id/lblnameEnfermedad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="enfermedad"
                android:textColor="@android:color/white"
                android:textSize="16dp" />

        </LinearLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>